<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    {{#if title}}
    <title>{{title}} - Healthy Desires</title>
    {{else}}
    <title>Healthy Desires</title>
    {{/if}}
    <meta name="description" content="{{#if description}}{{ description }}{{else}}{{ pkg.site.description }}{{/if}}">
    <meta name="keywords" content="{{#if keywords}}{{ keywords }}{{else}}{{ pkg.site.keywords }}{{/if}}">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Web font -->
    <link href='//fonts.googleapis.com/css?family=Quicksand:300,400,700' rel='stylesheet' type='text/css'>
    <!-- CSS -->
    <link rel="stylesheet" href="/css/stylesheet.min.css" />
    {{#if pageCss}}
    <link rel="stylesheet" href="/css/pages/{{pageCss}}.min.css" />
    {{/if}}
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/images/favicon.ico" />
    {{> opengraph}}
  </head>
  <body>
    <script>window.sliders = [];</script>
    <div class="container">
      <div class="row logo">
        {{#if homepage}}<h1>{{/if}}
        <a href="/" title="Healthy Desires">
          <img src="/images/healthy-desires-logo.svg" title="Healthy Desires" alt="Healthy Desires Logo" />
        </a>
        {{#if homepage}}</h1>{{/if}}
      </div>
      <div class="navigation">
        <div class="row">
          <label for="menuToggle" class="menu">Menu</label>
        </div>
        <input type="checkbox" id="menuToggle" class="invisible" />
        <div class="row">
          <nav>
            <ul>
              <li>
                <a href="/about-us" title="About Us">About Us</a>
              </li>
              <li>
                <a href="#" title="Shop">Shop</a>
                <ul class="submenu">
                  {{#withSort shop 'data.title'}}
                    {{#each this.pages}}
                    <li>
                      <a href="{{ createLink this.dest }}" title="{{ this.data.title }}">{{ this.data.title }}</a>
                    </li>
                    {{/each}}
                  {{/withSort}}
                </ul>
              </li>
              <li>
                <a href="#" title="Catering">Catering</a>
                <ul class="submenu">
                  {{#withSort catering 'data.title'}}
                    {{#each this.pages}}
                    <li>
                      <a href="{{ createLink this.dest }}" title="{{ this.data.title }}">{{ this.data.title }}</a>
                    </li>
                    {{/each}}
                  {{/withSort}}
                </ul>
              </li>
              <li>
                <a href="/gallery" title="Gallery">Gallery</a>
              </li>
              <li>
                <a href="/contact" title="Contact">Contact</a>
              </li>
            </ul>
          </nav>
        </div>
      </div>
